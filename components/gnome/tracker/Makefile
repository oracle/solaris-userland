BUILD_BITS =		64_and_32
# All components using gobject-introspection must be built with gcc as
# gobject-introspection does not produce correct results when using Studio.
COMPILER =		gcc
CTF_MODE =		relaxed
include ../../../make-rules/shared-macros.mk

COMPONENT_NAME=		tracker
COMPONENT_VERSION=	2.3.6
COMPONENT_ARCHIVE_HASH= \
	sha256:bd1eb4122135296fa7b57b1c3fa0ed602cf7d06c0b8e534d0bd17ff5f97feef2
COMPONENT_BUGDB=        gnome/libraries
COMPONENT_ANITYA_ID=	5578

COMPONENT_BAID=		89901
BUILD_STYLE=            meson

include $(WS_MAKE_RULES)/gnome-component.mk

# Required by GCC 14 - needs to be evaluated and properly fixed.
CFLAGS += -Wno-incompatible-pointer-types

# g-ir-scanner
CC_PIC_MODE = $(CC_PIC_DISABLE)
LD_Z_PIE_MODE = $(LD_Z_PIE_DISABLE)

CFLAGS += $(XPG6MODE)

CONFIGURE_ENV += PATH="$(GNUBIN):$(PATH)"
COMPONENT_INSTALL_ENV += PATH="$(GNUBIN):$(PATH)"
COMPONENT_BUILD_ENV += PATH="$(GNUBIN):$(PATH)"
# Needed to find /usr/lib/dbus-daemon when running tests
COMPONENT_TEST_ENV += PATH="$(GNUBIN):$(PATH):/usr/lib"

# Workaround build failure of not finding tracker-backup.h in tracker-store.c
# which is generated by valac > 0.55.  Its not needed as a dependency for
# tracker to build.  This should be removed once we update to tracker3
COMPONENT_PRE_BUILD_ACTION += /usr/bin/touch \
	$(SOURCE_DIR)/src/tracker-store/tracker-backup.h

CONFIGURE_OPTIONS += -Dnetwork_manager=disabled
CONFIGURE_OPTIONS += -Dstemmer=disabled
CONFIGURE_OPTIONS += -Dsystemd_user_services=no
CONFIGURE_OPTIONS.32 += -Dintrospection=false
CONFIGURE_OPTIONS += --libexecdir=$(USRLIBDIR)
LDFLAGS += -z gnu-version-script-compat

COMPONENT_TEST_MASTER = $(COMPONENT_TEST_RESULTS_DIR)/results-all.master

REQUIRED_PACKAGES += database/sqlite-3
REQUIRED_PACKAGES += library/desktop/gobject/gobject-introspection
REQUIRED_PACKAGES += library/glib2
REQUIRED_PACKAGES += library/icu
REQUIRED_PACKAGES += library/json-glib
REQUIRED_PACKAGES += library/libsoup-3
REQUIRED_PACKAGES += library/libxml2
REQUIRED_PACKAGES += system/library/math
