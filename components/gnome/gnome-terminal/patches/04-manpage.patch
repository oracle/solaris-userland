index c816e36f..6c1a2a23 100644
--- a/configure.ac
+++ b/configure.ac
@@ -169,6 +169,14 @@ if test -z "$DESKTOP_FILE_VALIDATE"; then
   fi
 fi
 
+AC_ARG_VAR([XSLTPROC],[the xsltproc programme])
+if test -z "$XSLTPROC"; then
+  AC_PATH_PROG([XSLTPROC],[xsltproc],[])
